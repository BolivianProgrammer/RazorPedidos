@model PedidosApp.Models.User

@{
    ViewData["Title"] = "Editar Usuario";
    bool isEditingSelf = (bool)(ViewData["IsEditingSelf"] ?? false);
    bool canChangePassword = (bool)(ViewData["CanChangePassword"] ?? false);
}

<h1>@(isEditingSelf ? "Editar Mi Perfil" : "Editar Usuario")</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label">Correo Electrónico</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Role" class="control-label">Rol</label>
                <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles"></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            
            @if (canChangePassword)
            {
                <div class="form-group mb-3">
                    <label asp-for="Password" class="control-label">Contraseña</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Dejar en blanco para mantener la contraseña actual" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <small class="form-text text-muted">
                        Dejar en blanco para mantener la contraseña actual. Mínimo 6 caracteres.
                    </small>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    Solo el usuario puede cambiar su propia contraseña por motivos de seguridad.
                </div>
            }
            
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                @if (!isEditingSelf)
                {
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}