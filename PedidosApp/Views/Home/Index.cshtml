@{
    ViewData["Title"] = "Inicio";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="text-center mb-5">
    <h1 class="display-4">Bienvenido a PedidosApp</h1>
    <p class="lead">Tu plataforma para realizar y gestionar pedidos de forma rápida y sencilla.</p>
</div>

@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-info">
                <h4>¡Hola, @User.Identity.Name!</h4>
                <p>¿Qué te gustaría hacer hoy?</p>
            </div>
        </div>
    </div>
    
    @if (User.IsInRole("Cliente") && ViewBag.RecentOrders != null)
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Mis Pedidos Recientes</h5>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.RecentOrders.Count > 0)
                        {
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Fecha</th>
                                            <th>Productos</th>
                                            <th>Estado</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in ViewBag.RecentOrders)
                                        {
                                            <tr>
                                                <td>@order.Id</td>
                                                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>
                                                    @foreach (var item in order.OrderItems)
                                                    {
                                                        <div>@item.Quantity x @item.Product.Name</div>
                                                    }
                                                </td>
                                                <td>
                                                    @{
                                                        var statusClass = order.Status switch
                                                        {
                                                            OrderStatus.Pending => "bg-warning",
                                                            OrderStatus.Processing => "bg-info",
                                                            OrderStatus.Completed => "bg-success",
                                                            OrderStatus.Cancelled => "bg-danger",
                                                            _ => "bg-secondary"
                                                        };

                                                        var statusDisplay = order.Status switch
                                                        {
                                                            OrderStatus.Pending => "Pendiente",
                                                            OrderStatus.Processing => "En Proceso",
                                                            OrderStatus.Completed => "Completado",
                                                            OrderStatus.Cancelled => "Cancelado",
                                                            _ => order.Status.ToString()
                                                        };
                                                    }
                                                    <span class="badge @statusClass">@statusDisplay</span>
                                                </td>
                                                <td>@order.Total.ToString("C2")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-center">No tienes pedidos recientes. <a asp-controller="Products" asp-action="Index">¡Compra algo!</a></p>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        @if (ViewBag.NewProducts != null && ViewBag.NewProducts.Count > 0)
        {
            <div class="row mt-4">
                <div class="col-md-12">
                    <h4>Productos Recomendados</h4>
                </div>
                
                @foreach (var product in ViewBag.NewProducts)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">
                                    @if (string.IsNullOrEmpty(product.Description) || product.Description.Length <= 100)
                                    {
                                        @product.Description
                                    }
                                    else
                                    {
                                        @(product.Description.Substring(0, 97) + "...")
                                    }
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0">@product.Price.ToString("C2")</h6>
                                    @if (product.Stock > 0)
                                    {
                                        <span class="badge bg-success">@product.Stock disponibles</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Agotado</span>
                                    }
                                </div>
                            </div>
                            <div class="card-footer">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary w-100">Ver detalles</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <div class="text-center mt-3 mb-5">
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">Ver todos los productos</a>
            </div>
        }
    }
    
    @if (User.IsInRole("Admin") || User.IsInRole("Empleado"))
    {
        <div class="row mt-4">
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-people fs-1"></i>
                        <h5 class="card-title">Gestión de Clientes</h5>
                        <p class="card-text">Administrar información de los clientes registrados.</p>
                        <a asp-controller="Users" asp-action="Index" class="btn btn-primary">Ir a Clientes</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-box-seam fs-1"></i>
                        <h5 class="card-title">Gestión de Productos</h5>
                        <p class="card-text">Administrar el catálogo de productos disponibles.</p>
                        <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Ir a Productos</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="bi bi-clipboard-check fs-1"></i>
                        <h5 class="card-title">Gestión de Pedidos</h5>
                        <p class="card-text">Administrar y dar seguimiento a los pedidos.</p>
                        <a asp-controller="Orders" asp-action="Index" class="btn btn-primary">Ir a Pedidos</a>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="row mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Catálogo de Productos</h5>
                    <p class="card-text">Explora nuestro amplio catálogo de productos disponibles.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Ver Productos</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Iniciar Sesión</h5>
                    <p class="card-text">Accede a tu cuenta para realizar pedidos y ver tu historial.</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Iniciar Sesión</a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);
    </script>
}
